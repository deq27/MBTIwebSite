<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= locals.title %></title>
  <meta name="description" content="My first application using Node.js, Express and MongoDB">
  <link rel="stylesheet" href="/css/style.css">

</head>
<body onload="chkSize(event)"onscroll="headerbarToggle()">  
  <div class="head">

    <%- include('./components/Header.ejs') %>
  </div>

  <div class="container">   

    <!-- 메인 : 실제 내용이 들어갈 부분 -->    
    <main class="main">
      <%- body%>
    </main>
  </div>  

  <script>
    // HeaderToggle
    var prevScrollpos = window.pageYOffset;
    console.log("first Y offset : " + prevScrollpos) // first value : 0

    window.onscroll = headerbarToggle;

    function headerbarToggle() {
      var headerbar = document.getElementsByClassName("head");

      var currentScrollPos = window.pageYOffset; // current Y offset
      if (prevScrollpos < currentScrollPos) {
        headerbar.style.opacity = 0.1;
      } else {
        headerbar.style.opacity = 1;
      }
      prevScrollpos = currentScrollPos;
    }
  </script>
</body>
</html>

